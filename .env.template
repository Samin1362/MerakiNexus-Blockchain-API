# MerakiNexus Payment API Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LOCAL DEVELOPMENT (Ganache)
# ===========================================
# For local development, use Ganache
BLOCKCHAIN_RPC_URL=http://127.0.0.1:7545
CONTRACT_ADDRESS=your_local_contract_address_here

# ===========================================
# REMOTE DEPLOYMENT (Alchemy Sepolia)
# ===========================================
# For production deployment on Vercel
ALCHEMY_API_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY_HERE
PRIVATE_KEY=your_private_key_here
CONTRACT_ADDRESS=your_sepolia_contract_address_here

# ===========================================
# GENERAL SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000
